{% extends 'base.html.twig' %}

{% block title %}Hello GlassController!{% endblock %}

{% block body %}
<style>
.applications {
    border: 1px solid black;
    padding: 10px;
}

.applications_buy {
    background-color: green;
}

.applications_sell {
    background-color: red;
}

.applications div {
    display: flex;
    justify-content: space-between;
    width: 50%;
}

.applications p {
    margin: 0;
    display: block;
    color: white;
}


</style>
<div>
    <h1>
        Stock glass {{ stock.name}}
    </h1>
    <h2>
        BUY:
    </h2>
    <div>
        {% for application in stock.getApplications() %}

            {% if application.action == BUY %}
                <div class="applications applications_buy">
                        <div>
                            <p>
                                <strong>quantity: </strong> {{ application.quantity }}
                            </p> 
                            <p>
                                <strong>price: </strong>{{ application.price }}
                            </p>
                            <p>
                                <strong>total: </strong>{{ application.price * application.quantity }}
                            </p>
                        </div>
                </div>
            {% endif %}
       {% endfor %}
    </div>
    <h2>
        SELL:
    </h2>
    <div>
        {% for application in stock.getApplications() %}
            {% if application.action == SELL %}
                <div class="applications applications_sell">
                        <div>
                            <p>
                                <strong>quantity: </strong> {{ application.quantity }}
                            </p> 
                            <p>
                                <strong>price: </strong>{{ application.price }}
                            </p>
                            <p>
                                <strong>total: </strong>{{ application.price * application.quantity }}
                            </p>
                        </div>
                </div>
            {% endif %}
       {% endfor %}
    
</div>
{% endblock %}
